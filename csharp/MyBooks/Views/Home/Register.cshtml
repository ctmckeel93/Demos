@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Register with our website!</h1>
    @model User;
    <form asp-action="Register" asp-controller="Home" method="post" class="border w-100 p-5 mt-3">
        @* <input type="hidden" asp-for="UserId"> *@
        <div class="row d-flex justify-content-center bg-light border p-5">
            <div class="col-sm-4">
                <div class="form-group">
                    <input asp-for="FirstName" class="form-control" placeholder="First name">
                    <span class="text-danger" asp-validation-for="FirstName"></span>
                </div>

                <div class="form-group">
                    <input asp-for="LastName" class="form-control" placeholder="Last name">
                    <span class="text-danger" asp-validation-for="LastName"></span>
                </div>

                <div class="form-group">
                    <input asp-for="Email" class="form-control" placeholder="Email">
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
                <div class="form-group">
                    <input class="form-control sm btn btn-primary" type="submit" value="Register">
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    <input asp-for="Password" class="form-control" placeholder="Password">
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>

                <div class="form-group">
                    <input asp-for="Confirm" class="form-control" placeholder="Confirm Password">
                    <span class="text-danger" asp-validation-for="Confirm"></span>
                    <a href="/login">Already have an account?</a>
                </div>
            </div>
        </div>
    </form>

</div>